<div id="login-form">
    <form>
        <h1>Login</h1>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Username</label>
            <input type="email" class="form-control login-form" id="email-login" aria-describedby="emailHelp" placeholder="EX: johndoe">
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Password</label>
            <input type="password" class="form-control" id="password-login" placeholder="EX: password123">
        </div>
        <div class="mb-3">
            <button type="submit" href='/signup' class="btn btn-primary ml-3 signup-form">Sign Up</button>
        </div>
        <button class="btn btn-primary ml-3">Login</button>
    </form>
</div>

<script src="/js/signup.js"></script>