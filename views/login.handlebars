<div id="login-form" class="center">
    <form class="login-form">
        <h1>Login</h1>
        <div class="mb-3 ml-3 mr-3">
            <label for="exampleInputEmail1" class="form-label">Username</label>
            <input class="form-control login-form" id="username-login" aria-describedby="emailHelp" placeholder="EX: johndoe">
        </div>
        <div class="mb-3 ml-3 mr-3">
            <label for="exampleInputPassword1" class="form-label">Password</label>
            <input type="password" class="form-control" id="password-login" placeholder="EX: password123">
        </div>
        <div class="mb-3">
            <a href='/signup' class="btn btn-primary ml-3">Sign Up</a>
        </div>
        <button type="submit" class="btn btn-primary ml-3">Login</button>
    </form>
</div>

<script src="/js/login.js"></script>