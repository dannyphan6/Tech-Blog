<div id="login-form">
    <form class="signup-form">
        <h1>Sign Up</h1>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Username</label>
            <input type="name" class="form-control" id="name-signup" aria-describedby="emailHelp" placeholder="EX: johndoe">
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Password</label>
            <input type="password" class="form-control" id="password-signup" placeholder="EX: password123">
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-primary ml-3">Submit</button>
        </div>
    </form>
</div>

<script src="/js/signup.js"></script>