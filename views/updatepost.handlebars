<div class="center" id="new-post">
    <div class="mb-3">
        <h1>Update Post</h1>
    </div>
    <form class="new-post">
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Title</label>
            <input class="form-control" id="title" placeholder="EX: Sports">
        </div>
        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label">Description</label>
            <textarea class="form-control" id="postBody" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary" role="button">Post</button>

    </form>
</div>